@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Billboards.Models
@model IEnumerable<Billboards.Models.User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Administrator/_Layout.cshtml";
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Users</title>
    <link rel="shortcut icon" href="https://img.icons8.com/carbon-copy/100/000000/cat-footprint.png" type="image/png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
 
    <form class="form-inline m-4" method="post" asp-action="AddUser">
        <img src="https://img.icons8.com/pastel-glyph/64/000000/cat--v2.png" />
        <div class="input-group mb-4" style="margin:3% 2%;">
            <button type="submit" class="btn " style="background-color: #038C7F;color:white;">Add User</button>
            <input type="text" required="" name="name" class="form-control" placeholder="Enter the name of user" style="margin-left:10px;">
        </div>
        <input name="__RequestVerificationToken" type="hidden">
    </form>
    <div style="margin: 2% 8%;">
        <h2>Users: </h2>
        <ul class="list-group justify-content-center">
            @foreach (User user in Model)
            {
            <li class="list-group-item">
                <p style="font-size: 22px;"> @user.UserName</p>
              
            <form method="post" asp-action="DeleteUser"
                  asp-route-id="@user.Id"
                  asp-route-Devices="@user.Devices"
                  asp-route-DeviceGroups="@user.DeviceGroups"
                  asp-route-UserName="@user.UserName">
                <button type="submit" class="btn btn-danger float-right">Delete</button>
                <input name="__RequestVerificationToken" type="hidden">
            </form>

                <a class="btn btn-secondary float-right mr-3" asp-action="Logs" asp-route-userId="@user.Id">View logs</a>
            </li>
            }
        </ul>
    </div>
</body>


