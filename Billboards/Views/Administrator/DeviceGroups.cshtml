@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Billboards.Models
@model Billboards.ModelsView.UsersDeviceGroupsModelView
@{
    ViewData["Title"] = "DeviceGroups";
    Layout = "~/Views/Administrator/_Layout.cshtml";
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Device groups</title>
    <link rel="shortcut icon" href="https://img.icons8.com/carbon-copy/100/000000/cat-footprint.png" type="image/png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>

<body>
    <form class="form-inline m-4" method="post" method="post" asp-controller="Administrator" asp-action="AddDeviceGroup">
        <img src="https://img.icons8.com/pastel-glyph/64/000000/cat--v2.png" />
        <div class="input-group mb-4" style="margin:3% 2%;">
            <button type="submit" class="btn " style="background-color: #038C7F;color:white;">Add Device group</button>
            <select class="custom-select" name="id" required style="margin-left:10px;">
                <option selected value="">Choose user</option>
                @for (var i = 0; i < @Model.Users.Count(); ++i)
                {
                    <option value="@Model.Users.ElementAt(i).Id">
                        @Model.Users.ElementAt(i).UserName
                    </option>
                }
            </select>
        </div>
        <input name="__RequestVerificationToken" type="hidden">
    </form>

    <div style="margin: 2% 8%;">
        <h2>Devices Group: </h2>
        <table class="table ">
            <thead>
                <tr>
                    <th scope="col">User</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            @for (int i = 0; i < Model.DeviceGroups.Count(); ++i)
            {
                <tbody>
                    <tr>
   
                        <td>@Model.DeviceGroups.ElementAt(i).User.UserName</td>
                        <td class="btn-group-toggle float-right">
                            <form method="post" asp-action="DeleteDeviceGroup" asp-route-id="@Model.DeviceGroups.ElementAt(i).Id">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>

</body>



